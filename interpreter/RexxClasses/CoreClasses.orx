   if _date~contains("-") then
       parse var _date year "-W" weekNumber "-" dayNumber
   else
       parse var _date year "W" +1 weekNumber +2 dayNumber

   signal on syntax

   -- to calculate the start of W01 we use January 4th which is always
   -- a day within W01. Then the start of W01 is -pivot~weekDay
   pivot = self~new(year, 1, 4)

   -- now we need to validate all date components
   -- WholeNumber validation isn't enough here, we don't accept e. g. 1e03
   -- we also require fixed lengths with leading zeros
   if year~verify("0123456789") \= 0 | year~length \= 4 |,
      weekNumber~verify("0123456789") \= 0 | weekNumber~length \= 2 |,
      weekNumber < 1 | weekNumber > pivot~weeksInYear |,
      dayNumber~verify("0123456789") \= 0 | dayNumber~length \= 1 |,
      dayNumber < 1 | dayNumber > 7 then
       signal syntax

   -- we calculate the offset in days relative to pivot day
   offset = (weekNumber - 1) * 7 + dayNumber - pivot~weekDay
   -- even if the offset is negative or larger than 365, addDays will handle
   -- Note that due to good fortune, the week number date for Jan 1, 0001
   -- is 0001-W01-1, so we will never have to deal with the year 0000.
   -- Also, December 31, 9999 has a weekNumberDate of 9999-W52-5, so we
   -- never have to deal with a valid date requiring 5 digits for the year.
   -- We will still raise syntax if we get a request for 9999-W52-6 or -7
   return pivot~addDays(offset)

