-- Returns the ISO week number for a given date
::METHOD weekNumber
  use strict arg

  -- we calculate the ISO week number according to
  -- https://en.wikipedia.org/wiki/ISO_week_date#Calculation
  -- week(date) = ( ordinal(date) - weekday(date) + 10 ) % 7
  -- week = ( lastWeek(year-1), week < 1
  --        ( 1,                week > lastWeek(year)
  weekNumber = (self~yearDay - self~weekDay + 10) % 7

  -- if not on the edges, then we are done
  if weekNumber >= 1, weekNumber <= 52 then
      return weekNumber
  -- if this is less than one, then the day belongs to the last week of the previous year
  else if weekNumber < 1 then
      return self~addYears(-1)~weeksInYear
  -- if greater than 52, see if it falls into first week of next year
  else return (weekNumber > self~weeksInYear)~?(1, weekNumber)

-- return the year associated with this date's week number. This may be
-- different than the year for dates at the beginning or end of the year
::METHOD weekNumberYear
  use strict arg

  year = self~year
  weekNumber = self~weekNumber
  month = self~month

  -- if the week number is 1 but we're in December, then this actually is part of next year
  if weekNumber == 1, month == 12 then do
      year += 1
  end
  -- if the week number is at the end of the year but the date is in January, then
  -- this belongs to the previous year
  else if weekNumber >= 52, month == 1 then do
      year -= 1
  end

  return year

-- return the number of weeks contained in a year according to the ISO
-- week number rules
::method weeksInYear
  use strict arg

  -- we calculate the number of ISO weeks according to
  -- https://en.wikipedia.org/wiki/ISO_week_date#Weeks_per_year
  -- weeks(year) = 52 + ( 1   if p(year) = 4 or p(year-1) = 3
  --                    ( 0   otherwise
  -- p(year) = (year + year % 4 - year % 100 + year % 400 ) mod 7

  year = self~year
  if p(year) \= 4, p(year - 1) \= 3 then
      return 52
  else
      return 53

  p: procedure
      parse arg year
      return (year + year % 4 - year % 100 + year % 400 ) // 7


